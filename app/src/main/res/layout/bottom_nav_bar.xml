<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#00000000"
    android:clipChildren="false"
    android:gravity="bottom"
    android:paddingBottom="10dp"
    tool:background="#000">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_like_off" />

        <TextView
            android:id="@+id/tv_first"
            android:visibility="gone"
            android:textSize="10sp"
            android:text="收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_web_off" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_second"
            android:textSize="10sp"
            android:textColor="#5fce30"
            android:text="网页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageButton
            android:scaleType="centerInside"
            android:background="?android:selectableItemBackgroundBorderless"
            android:id="@+id/centerIcon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_download_off" />

        <TextView
            android:id="@+id/tv_third"
            android:textSize="10sp"
            android:visibility="gone"
            android:text="下载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingTop="18dp"
            android:paddingBottom="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_me_off" />

        <TextView
            android:id="@+id/tv_fourth"
            android:visibility="gone"
            android:textSize="10sp"
            android:text="我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>


